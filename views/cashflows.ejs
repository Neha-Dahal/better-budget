      <main>
        <section class="Form my-4 mx-5">
          <div class="container">
            <div class="row">
              <div class="col-lg-5">
                <img
                  src="/images/cashflows.svg"
                  alt="Cashflow image"
                  class="img-fluid"
                  width="400"
                />
              </div>
              <div class="col-lg-7 px-5 pt-5">
                <h1 class="cashflow display-5 fw-bold mb-3">Cashflows</h1>
                <form method="post" action="/save-cashflows">
                  <div class="form-row">
                    <div class="col-lg-7">
                      <label for="date">Date</label>
                      <input
                        type="date"
                        class="form-control mt-1 mb-3 p-3"
                        id="date"
                        name="date"
                        placeholder="Enter date"
                        max="2022-10-22"
                      />
                    </div>
                  </div>
                  <div class="form-row">
                    <div class="col-lg-7">
                      <label for="category">Category</label>
                      <select name="category" class="form-select mt-1 mb-3 p-3">
                        <option selected>Select category</option>
                        <option value="Food">Food</option>
                        <option value="Clothes">Clothes</option>
                        <option value="Salary">Salary</option>
                        <option value="Stocks">Stocks</option>
                        <option value="Rent">Rent</option>
                      </select>
                    </div>
                  </div>
                  <div class="form-row">
                    <div class="col-lg-7">
                      <label for="amount">Amount</label>
                      <input
                        type="number"
                        class="form-control mt-1 mb-3 p-3"
                        id="amount"
                        name="amount"
                        placeholder="Enter amount"
                      />
                    </div>
                  </div>
                  <div class="form-row">
                    <div class="col-lg-7">
                      <button
                        type="submit"
                        class="btn btn-primary btn1 btn-new mt-2"
                      >
                        Submit
                      </button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </section>
